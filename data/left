  else
    lightgrayc = 0
  end

elseif t == "14" then
  if grayc == 0 then
    grayc = 128
  else
    frayc = 0
  end

elseif t == "15" then
  if orangec == 0 then
    orangec = 2
  else
    orangec = 0
  end

elseif t == "16" then
  if bluec == 0 then
    bluec = 2048
  else
    bluec = 0
  end
end

cc = colors.combine(redc, greenc, whitec, cyanc, purplec, brownc, yellowc, magentac, lightbluec, blackc, limec, pinkc, lightgrayc, grayc, orangec, bluec)
rs.setBundledOutput("left", cc)
term,.clear()
term.setCursorpos(1,1)
shell.run("/sys/bin/redmonitor/redmon")
